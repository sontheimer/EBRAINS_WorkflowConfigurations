<?xml version="1.0" encoding="UTF-8" ?>
<settings>
    <co_simulation_action>
        <title>Nest to TVB transformer data producer</title>
        <description>Test Nest to TVB transformer input data</description>
        <variables>
            <var_000>
                <var_name>__no_variable_name__</var_name>
                <var_value>__no_variable_value__</var_value>
            </var_000>
        </variables>
        <parameters>
            <par_000>
                <par_name>CO_SIM_SCIENTIFIC_PARAMETERS</par_name>
                <par_value>{CO_SIM_PARAMETERS_PATH}/scientific/tvb.xml</par_value>
            </par_000>
        </parameters>
        <action>
            <launcher>
                <launcher_command>{CO_SIM_LAUNCHER}</launcher_command>
                <launcher_arguments>
                    <argv_1_option>--gres=gpus:0</argv_1_option>
                    <argv_1_value>{CO_SIM_EMPTY}</argv_1_value> 
                    <argv_2_option>-n</argv_2_option>
                    <argv_2_value>2</argv_2_value>  <!-- change it in parser to accommodate more than one {CO_SIM_EMPTY}-->
                    <argv_3_option>--exact</argv_3_option>
                    <argv_3_value>{CO_SIM_EMPTY}</argv_3_value>  <!-- change it in parser to accommodate more than one {CO_SIM_EMPTY}-->
                </launcher_arguments>
            </launcher>
            <performer>
                <performer_binary>python3</performer_binary>
                <performer_arguments>
                    <argv_01_empty>{CO_SIM_EMPTY}</argv_01_empty>
                </performer_arguments>
            </performer>
            <routine>
                <routine_code>{CO_SIM_ROUTINES_PATH}/tvb_simulator/tvb_adapter.py</routine_code>
                <routine_arguments>
                    <!-- TODO: tag is required even if there is no argument -->
                    <argv_01_empty>{CO_SIM_EMPTY}</argv_01_empty>
                </routine_arguments>
            </routine>
        </action>
    </co_simulation_action>
</settings>
